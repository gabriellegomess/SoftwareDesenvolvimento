package br.edu.up;
import java.io.File; /* importar o arquivo */
import java.io.FileNotFoundException;
import java.util.Scanner;

public class Programa {
	
	public static void main(String[] args) throws FileNotFoundException{ //caso o arquivo n esteja la ele vai dar esse erro de n√£o encontrado 
		
		File arquivo = new File("C:\\_src\\gabidevs\\LeituraGravacaoArquivosTextos\\src\\arquivo.txt"); // entre "" e com duas \\
		Scanner leitor = new Scanner(arquivo);
		
		while(leitor.hasNextLine()) { 	//ler o arquivo enqto tiver uma linha texto
			String linha = leitor.nextLine();
			System.out.println("Texto: "+linha);
			System.out.println("Tamanaho: "+linha.length()); // (mostra: comprimento, quantidade de caracteres)
		}
		
		leitor.close();
		
	}

}
