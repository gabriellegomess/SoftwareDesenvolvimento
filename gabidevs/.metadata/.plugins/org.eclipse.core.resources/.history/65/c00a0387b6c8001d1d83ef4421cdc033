package br.edu.up.util;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.Formatter;
import java.util.Scanner;

import br.edu.up.entidades.Ex01Grupo;


public class Ex01 {

	/* Dado o arquivo de texto grupos-tabulados.txt, crie um programa para fazera leitura do arquivo e:
	 * 1. Somar o valor total de todos os registros;
	 * 2. Somar o valor total de cada grupo;
	 * 3. Imprimir o valor total de cada grupo e de todos os registros*/

	public static void main(String[] args) throws FileNotFoundException {
		
		String arquivoOrigem = "C:\\_src\\gabidevs\\ExercicioFixacao\\grupos-tabulados.txt";
		File arquivo = new File(arquivoOrigem); 		
		Scanner leitor = new Scanner(arquivo);
		
	/*	String arquivoDestino ="C:\\_src\\gabidevs\\ExercicioFixacao\\destino.txt"; 
		Formatter gravador = new Formatter(arquivoDestino); */
					
		Grupos[] vetorDeGrupo = new Grupos[];
		

		while(leitor.hasNextLine()) {
			String linha = leitor.nextLine();
			String[] valores = linha.split("/t");
		
			Grupos grupo = new Grupos();
			
			grupo.nome = valores[73];
			grupo.valor = Double.parseDouble(valores[73]);

				
			/*//System.out.println(linha);
			String soma = (vetor[1] + vetor[1]);
			//System.out.println("Soma dos arquivos: "+(vetor[1] + vetor[1]));
			System.out.println("SOMA: "+soma); */
		}
		
			
		double totalValores = 0;
		
		for (int i = 0; i < vetorDeGrupo.length; i++) {
		
			Grupos grupo = vetorDeGrupo[i];
			
			System.out.println("PreÃ§o: "+grupo.valor);
			
			totalValores += grupo.valor;
		}
		
		leitor.close();
		
		
	}
	
}
